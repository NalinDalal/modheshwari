# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

aws_region = "us-east-1"
environment = "production"
project_name = "modheshwari"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# Database Configuration
db_username = "postgres"
db_password = "CHANGE_ME_TO_A_STRONG_PASSWORD"  # Generate a strong password
db_name = "modheshwari"
db_instance_class = "db.t4g.micro"  # Increase for production (e.g., db.t4g.small)

# JWT Secret
jwt_secret = "CHANGE_ME_TO_A_SECURE_RANDOM_HEX"  # Generate with: openssl rand -hex 32

# Domain and SSL (optional)
domain_name = ""  # e.g., "app.yourdomain.com"
certificate_arn = ""  # ARN of your ACM certificate for HTTPS

# ECS Task Resources
# For production, consider increasing these values
backend_cpu = 256      # 256 = 0.25 vCPU
backend_memory = 512   # MB

frontend_cpu = 256
frontend_memory = 512

websocket_cpu = 256
websocket_memory = 512
